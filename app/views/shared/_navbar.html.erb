          <%= image_tag "https://www.iconfinder.com/data/icons/communication-line-10/24/account_profile_user_contact_person_avatar_placeholder-512.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Dashboard", "/dashboard", class: "dropdown-item" %>
              <% if current_user.admin %>
                <%= link_to "Manage Admin Access", "/users", class: "dropdown-item" %>
